<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/button_chest"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/label_button_chest" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_chest"
        android:text="@string/label_button_back" />

    <Button
        android:id="@+id/button_shoulders"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_back"
        android:text="@string/label_button_shoulders" />

    <Button
        android:id="@+id/button_legs"
        android:layout_width="match_parent"
       	android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_shoulders"
        android:text="@string/label_button_legs" />

    <Button
        android:id="@+id/button_arms"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_legs"
        android:text="@string/label_button_arms" />

    <Button
        android:id="@+id/button_body_weight"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_arms"
        android:text="@string/label_button_body_weight" />

</RelativeLayout>
