<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

<!-- scroll view >...
 -->

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/button_chest"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/loadimagebarbell"
            android:text="@string/label_button_chest" />

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button_chest"
            android:background="@drawable/loadimagebarbell"
            android:text="@string/label_button_back" />

        <ImageButton
            android:id="@+id/button_shoulders"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button_back"
            android:background="@drawable/loadimagebarbell"
            android:text="@string/label_button_shoulders" />

        <ImageButton
            android:id="@+id/button_legs"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button_shoulders"
            android:background="@drawable/loadimagebarbell"
            android:text="@string/label_button_legs" />

        <ImageButton
            android:id="@+id/button_arms"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button_legs"
            android:background="@drawable/loadimagebarbell"
            android:text="@string/label_button_arms" />

        <ImageButton
            android:id="@+id/button_body_weight"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button_arms"
            android:background="@drawable/loadimagebarbell"
            android:text="@string/label_button_body_weight" />

        <ImageButton
            android:id="@+id/button_create_workout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button_body_weight"
            android:background="@drawable/loadimagebarbell"
            android:text="@string/label_button_create_workout" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_back"
            android:layout_centerHorizontal="true"
            android:text="Back"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_shoulders"
            android:layout_centerHorizontal="true"
            android:text="Shoulders"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_legs"
            android:layout_centerHorizontal="true"
            android:text="Legs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_arms"
            android:layout_centerHorizontal="true"
            android:text="Arms"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_body_weight"
            android:layout_centerHorizontal="true"
            android:text="Body Weight"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_create_workout"
            android:layout_centerHorizontal="true"
            android:text="Create Workout"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Chest"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>
