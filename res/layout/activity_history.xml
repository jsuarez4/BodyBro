<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/button_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/label_button_done" />

    <ListView
        android:id="@+id/list_view_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_done"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dropdown_muscle_group"
        android:clickable="true"
        android:focusable="true"
        android:longClickable="true" >

    </ListView>

    <Spinner
        android:id="@+id/dropdown_muscle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_filter_history_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textview_filter_history_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/string_dropdown_label" />

</RelativeLayout>
